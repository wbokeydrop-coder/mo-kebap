# ⚙️ Environment Variables Template
# Copy this file to .env and fill in your values

# === API Keys (Optional) ===
# Stripe Payment Integration
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_key_here

# PayPal Payment Integration  
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id_here

# Google Maps API
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# === Backend Configuration (Optional) ===
# If you have a backend API
VITE_API_URL=http://localhost:3000/api
VITE_API_TIMEOUT=5000

# === Analytics (Optional) ===
# Google Analytics
VITE_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Facebook Pixel
VITE_FB_PIXEL_ID=your_facebook_pixel_id

# === Email Configuration (Optional) ===
# For contact forms
VITE_EMAIL_SERVICE_ID=your_emailjs_service_id
VITE_EMAIL_TEMPLATE_ID=your_emailjs_template_id
VITE_EMAIL_PUBLIC_KEY=your_emailjs_public_key

# === Restaurant Information ===
VITE_RESTAURANT_NAME="Pizzeria Münsingen"
VITE_RESTAURANT_PHONE="+41 31 123 45 67"
VITE_RESTAURANT_EMAIL="info@pizzeria-muensingen.ch"
VITE_RESTAURANT_ADDRESS="Hauptstrasse 1, 3110 Münsingen"

# === Business Hours ===
VITE_OPENING_HOURS="Mo–So: 11:00–22:00"

# === Feature Flags ===
VITE_ENABLE_DELIVERY=true
VITE_ENABLE_PICKUP=true
VITE_ENABLE_RESERVATIONS=false
VITE_ENABLE_LOYALTY_PROGRAM=false

# === Development Settings ===
VITE_DEBUG_MODE=false
VITE_SHOW_DEV_TOOLS=false

# === Social Media ===
VITE_FACEBOOK_URL=https://facebook.com/your-page
VITE_INSTAGRAM_URL=https://instagram.com/your-profile
VITE_TWITTER_URL=https://twitter.com/your-profile

# === Delivery Settings ===
VITE_MIN_ORDER_AMOUNT=15.00
VITE_DELIVERY_FEE=3.50
VITE_FREE_DELIVERY_THRESHOLD=30.00
VITE_MAX_DELIVERY_DISTANCE=5

# === Currency ===
VITE_CURRENCY=CHF
VITE_CURRENCY_SYMBOL=CHF

# ⚠️ SECURITY NOTES:
# - Never commit .env file to git
# - Add .env to .gitignore
# - Use different keys for development and production
# - Keep API keys secret
# - Don't expose private keys in frontend code
